<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="477.0" prefWidth="540.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.bishal_amgai_lab2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField  fx:id="Tbrand" promptText="Brand" />
   <TextField  fx:id="Tmodel" promptText="Model" />
   <TextField  fx:id="Tyear" promptText="Year" />

    <Label fx:id="messageText" />
   <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0">
     <columns>
       <TableColumn fx:id="Carid" prefWidth="75.0" text="Carid" />
       <TableColumn fx:id="Brand" prefWidth="75.0" text="Brand" />
         <TableColumn fx:id="Model" prefWidth="75.0" text="Model" />
         <TableColumn fx:id="Year" prefWidth="75.0" text="Year" />
     </columns>
   </TableView>
   <HBox alignment="CENTER" prefHeight="36.0" prefWidth="500.0">
      <children>
          <Button onAction="#ViewData" text="View Data" />
         <Button onAction="#Insert" mnemonicParsing="false" text="Insert" />
         <Button onAction="#update" mnemonicParsing="false" text="Update" />
         <Button onAction="#delete" mnemonicParsing="false" text="Delete" />
      </children>
   </HBox>
</VBox>
